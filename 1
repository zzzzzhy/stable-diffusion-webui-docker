apiVersion: v1
kind: Pod
metadata:
  name: nginx
  namespace: leida-ai
spec:
  restartPolicy: Never
  volumes:
    - name: code
      persistentVolumeClaim:
        claimName: sight-pvc
  containers:
    - name: nginx
      image: nginx:1.16.1
      ports:
        - containerPort: 80
      volumeMounts:
        - name: code
          mountPath: /code